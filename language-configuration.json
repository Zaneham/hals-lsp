{
  "comments": {
    "lineComment": "C",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "/*", "close": "*/" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "wordPattern": "[A-Za-z_][A-Za-z0-9_$]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(DO|IF|ELSE|PROCEDURE|FUNCTION|TASK|PROGRAM|COMPOOL)\\b",
    "decreaseIndentPattern": "^\\s*(END|CLOSE)\\b"
  }
}
